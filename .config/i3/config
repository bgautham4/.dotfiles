# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4
set $ctrl Control
set $alt Mod1
# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:NotoSans-Regular 12

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
#font pango:DejaVu Sans Mono 8

# Start XDG autostart .desktop files using dex. See also
# https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id dex --autostart --environment i3

#Compositor
exec --no-startup-id picom --no-fading-openclose --fade-in-step=1 --fade-out-step=1 --fade-delta=0 -b

# The combination of xss-lock, nm-applet and pactl is a popular choice, so
# they are included here as an example. Modify as you see fit.

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork --ignore-empty-password

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet
#bluetooth
exec --no-startup-id blueman-applet
#Notification daemon
exec --no-startup-id dunst
#Redshift
exec --no-startup-id redshift
# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# move tiling windows via drag & drop by left-clicking into the title bar,
# or left-clicking anywhere into the window while holding the floating modifier.
tiling_drag modifier titlebar

#App class settings
set $bclass "Brave-browser"
set $file_explorer "Thunar"
# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1:  "
set $ws2 "2: 󰈹 "
set $ws3 "3:  "
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"
# Include the bindings
include ./include/key-bindings.conf
#Force app to load in certain workspaces
assign [class=$bclass] $ws2
assign [class=$file_explorer] $ws3

#Colors
set $transp #00000000
set_from_resource $black i3wm.black #000000
#Orange teal pallete
set_from_resource $bg i3wm.background
set_from_resource $fg i3wm.foreground
#invert fg bg for focus
set_from_resource $fbg i3wm.foreground
set_from_resource $ffg i3wm.background
#darker fg and bg, invert this for focused_inactive
set_from_resource $dfg i3wm.fg1
set_from_resource $dbg i3wm.bg1
#Attention background
set_from_resource $abg i3wm.at_fg

# window colors
#			    border                      background                  text                         indicator	   child border
client.focused		    $fbg                        $fbg                        $ffg                          $fbg	           $fbg
client.unfocused	    $bg                         $bg                         $fg                           $transp	   $transp
client.focused_inactive	    $dfg                        $dfg                        $dbg			  $transp	   $transp
client.urgent		    $abg                        $abg                        $bg                           $abg	           $abg

# bar
# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  	#status_command i3status -c $XDG_CONFIG_HOME/i3status/i3status.conf
	font pango:NotoSans-Regular 12
        status_command SCRIPT_DIR=$XDG_DATA_HOME/i3blocks/scripts/ i3blocks
	position top
	colors {
		background $bg
	    	separator #757575
		#                  border             background         text
		focused_workspace  $fbg               $fbg              $ffg
		inactive_workspace $bg                $bg               $fg
		urgent_workspace   $abg               $abg              $bg
	}
}

# Outer gaps for all windows: space along the screen edges.
gaps outer 5px
# Inner gap between windows
gaps inner 5px
# inverse_outer only enables outer gaps when there is exactly one
# window or split container on the workspace.
smart_gaps inverse_outer
hide_edge_borders none

#Wallpaper
exec_always --no-startup-id feh --bg-scale /home/gautham/Desktop/wallpapers/orange-sky.jpg

#Window borders
default_border pixel 2
default_floating_border pixel 2
#Dont need borders when we have only a single window
hide_edge_borders smart 
